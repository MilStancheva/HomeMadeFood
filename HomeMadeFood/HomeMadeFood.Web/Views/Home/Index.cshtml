@{
    ViewBag.Title = "Home Page";
}

<div class="parallax-container">
    <div class="fullscreen-bg">
        <video loop muted autoplay poster="img/videoframe.jpg" class="fullscreen-bg__video">
            <source src="~/Content/media/588741282.mp4" type="video/mp4" />
        </video>
    </div>

    <div class="container-home parallax">
        <div class="col-md-8">
            <h1>@GlobalResources.HomeMadeFoodTitle</h1>
            <p>
               @GlobalResources.IndexWeAreHereToMakeYourDay 
            </p>
            <p>
                @GlobalResources.IndexMakeYourEmployeesHappy
            </p>
            <p>
                @GlobalResources.IndexTryIt
            </p>
            <p>
                <a href="/account/register" class="btn btn-warning">@GlobalResources.RegisterLink</a>
                <a href="/" class="btn btn-warning">@GlobalResources.OrderYourLunchLink</a>
            </p>
        </div>
    </div>
</div>