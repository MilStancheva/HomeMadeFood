@model EditDailyMenuViewModel

@{
    ViewBag.Title = "Edit Daily Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="row">
        @Html.Partial("_AdminSideBarMenu")
        <div class="container">
            <div class="col-md-10">
                <h2>Edit Daily Menu for @string.Format("{0: dd/MM/yyyy} - {1}", Model.SelectedDate, Model.SelectedDate.DayOfWeek)</h2>

                @Html.Action("AddMenu", Model)

            </div>
        </div>

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/adminindexpage")
    @Scripts.Render("~/bundles/adminadddailymenu")
}