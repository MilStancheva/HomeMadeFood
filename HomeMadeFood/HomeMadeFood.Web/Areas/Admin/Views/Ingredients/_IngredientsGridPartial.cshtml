@model HomeMadeFood.Web.Areas.Admin.Models.SearchIngredientViewModel

<div style="margin-top:17px;">
    @{
        var grid = new WebGrid(
                            canPage: true,
                            rowsPerPage: Model.PageSize,
                            canSort: true,
                            ajaxUpdateContainerId: "grid");

        grid.Bind(Model.Ingredients, rowCount: Model.TotalRecords, autoSortAndPage: false);
        grid.Pager(WebGridPagerModes.All);

        @grid.GetHtml(htmlAttributes: new { id = "grid" },
        fillEmptyRows: false,
        tableStyle: "table table-bordered table-hover",
        mode: WebGridPagerModes.All,
        columns: grid.Columns(
              grid.Column("Name", "Name", style: "col-lg-2"),
              grid.Column("FoodType", "FoodType", style: "col-lg-2"),
              grid.Column("MeasuringUnit", "MeasuringUnit", style: "col-lg-2"),
              grid.Column("PricePerMeasuringUnit", header: "PricePerMeasuringUnit", format: @<text>@string.Format("{0:C}", item.PricePerMeasuringUnit) </text>),
              grid.Column("Quantity", "Quantity", style: "col-lg-2"),
              grid.Column(header: "Action", canSort: false, style: "action",
                format: @<text>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </text>)
        ));
    }
</div>
